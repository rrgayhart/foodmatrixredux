<h1>New recipe</h1>
<%= form_for @recipe do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :minutes %><br>
    (in minutes) <br />
    <%= f.number_field :minutes %>
  </div>
    <div class="field">
    <%= f.label :complex %><br>
    <%= f.check_box :complex %>
  </div>
    <div class="field">
    <%= f.label :type %><br>
    <%= f.text_field :type %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', recipes_path %>